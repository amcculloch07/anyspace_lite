<div class="page-header">
  <h1>
    Venues
    <a href="/venues/new" class="btn btn-lg btn-success">New Venue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Coordinator</th>
        <th>Website</th>
        <th>Capacity</th>
        <th>Description</th>
        <th>Cancellation policy</th>
        <th>Drink options</th>
        <th>Food options</th>
        <th>Actions</th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.title %></td>
        <td><%= venue.address %></td>
        <td><%= venue.city %></td>
        <td><%= venue.state %></td>
        <td><%= venue.zip %></td>
        <td><%= venue.coordinator.first_name %></td>
        <td><%= venue.website %></td>
        <td><%= venue.capacity %></td>
        <td><%= venue.description %></td>
        <td><%= venue.cancellation_policy %></td>
        <td><%= venue.drink_options %></td>
        <td><%= venue.food_options %></td>
        <td>
          <a href="/venues/<%= venue.id %>" class="btn btn-primary">Show</a>
          <a href="/venues/<%= venue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue/<%= venue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
